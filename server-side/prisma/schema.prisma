generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ability_scores {
  id           Int         @id @default(autoincrement())
  strength     Int
  dexterity    Int
  constitution Int
  intelligence Int
  wisdom       Int
  charisma     Int
  characters   characters?
}

model characters {
  id                Int              @id @default(autoincrement())
  level             Int
  name              String
  race              String
  subrace           String
  class             String
  subclass          String
  speed             Int?
  armor             Int?
  maxHealth         Int              @map("max_health")
  currentHealth     Int              @map("current_health")
  tempHealth        Int              @map("temp_health")
  healthDice        String           @map("health_dice")
  abilityScoresId   Int?             @map("ability_scores_id") @unique(map: "characters_ability_scores_key")
  proficiencies     String[]
  savingThrows      String[]         @map("saving_throws")
  ability_scores    ability_scores?  @relation(fields: [abilityScoresId], references: [id], onDelete: Cascade, map: "ability_scores_fk")
  userId            String           @map("user_id")
  spells            Spells[]
}

model users {
  id             String   @id @default(cuid())
  email          String   @unique
  username       String   @unique
  password       String   @map("hashed_password")
  createdAt      DateTime @map("created_at") @default(now())
  updatedAt      DateTime @map("updated_at") @updatedAt
}

model Features {
  id           BigInt   @id @default(autoincrement())
  name         String
  description  String
  level        Int
  characterId  Int      @map("character_id")

  @@map("features")
}

model Spells {
  id          BigInt     @id @default(autoincrement())
  name        String
  level       Int
  school      String?
  casting     String?
  range       String?
  components  String?
  duration    String?
  description String?
  characterId Int      @map("character_id")
  character   characters   @relation(fields: [characterId], references: [id])

  @@map("spells")
}


model test_table {
  id     Int      @id @default(autoincrement())
  random String[]
}
